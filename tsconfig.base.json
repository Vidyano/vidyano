{
  "compilerOptions": {
      "module": "ESNext",
      "useDefineForClassFields": false,
      "allowSyntheticDefaultImports": true,
      "importHelpers": true,
      "moduleResolution": "node",
      "lib": [
          "ES2022",
          "DOM",
          "DOM.Iterable"
      ],
      "experimentalDecorators": true,
      "noEmitOnError": false,
      "rootDir": ".",
      "types": [
          "qunit"
      ],
      "baseUrl": "src",
      "paths": {
        "components/*": [ "app/web-components/*" ],
        "libs/*": [ "app/libs/*" ],
        "polymer": [ "app/libs/polymer/polymer" ],
        "vidyano": [ "vidyano" ],
      }
  },
  "exclude": [
      "wwwroot/dist"
  ],
  "include": [
      "src/core/**/*.ts",
      "src/app/**/*.ts",
      //"test/**/*.ts",
  ],
  "watchOptions": {
    "watchFile": "dynamicprioritypolling"
  }
}