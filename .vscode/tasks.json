{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build",
            "label": "typescript: watch",
            "isBackground": true
        },
        {
            "type": "shell",
            "label": "sass: watch",
            "command": "npx sass --watch --no-source-map src:src --poll",
            "group": "build",
            "isBackground": true,
            "problemMatcher": [
                {
                    "owner": "sass-watch",
                    "fileLocation": "relative",
                    "pattern": {
                        "regexp": "^(Error|Warn|Deprecation Warning):\\s*(.*)$",
                        "message": 2
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^Sass is watching for changes",
                        "endsPattern": "^(Sass is watching for changes|Compiled .+ to .+)"
                    }
                }
            ]
        },
        {
            "type": "shell",
            "label": "rollup: watch",
            "command": "npx rollup -c -w --bundleConfigAsCjs",
            "group": "build",
            "isBackground": true,
            "problemMatcher": [],
            "detail": "rollup -c -w --bundleConfigAsCjs",
            "dependsOn":[
                "typescript: watch",
                "sass: watch"
            ]
        }
    ]
}