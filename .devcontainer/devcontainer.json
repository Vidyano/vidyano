{
	"name": "C# (.NET)",
	"runArgs": ["--init"],
	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"npxms.hide-gitignored",
				"coenraads.bracket-pair-colorizer",
				"idered.npm",
				"ms-dotnettools.csdevkit",
				"Anthropic.claude-code"
			]
		}
	},
	"forwardPorts": [5000, 5001, 8081],
	"postCreateCommand": "npm install && dotnet dev-certs https && dotnet build dev/Dev.csproj",
	"remoteUser": "vscode",

	// Unset DISPLAY to prevent interference with Playwright
	"remoteEnv": {
		"DISPLAY": ""
	}
}